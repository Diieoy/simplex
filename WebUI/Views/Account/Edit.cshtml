@model WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>@WebUI.Resources.AccountControllerTexts.Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>@ViewBag.Message</h2>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.Password)

        <div class="form-group">
            @Html.Label(WebUI.Resources.AccountControllerTexts.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(WebUI.Resources.AccountControllerTexts.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(WebUI.Resources.AccountControllerTexts.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(WebUI.Resources.AccountControllerTexts.TimeZone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.TimeZone, new SelectList(TimeZoneInfo.GetSystemTimeZones()), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TimeZone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(WebUI.Resources.AccountControllerTexts.UserLanguage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.UserLanguage, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserLanguage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@WebUI.Resources.AccountControllerTexts.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
