@model IEnumerable<WebUI.WcfEventServiceReference.EventSeatDTO>

@{
    ViewBag.Title = "DetailsEventArea";
}

<p>
    @Html.ActionLink(@WebUI.Resources.EventManagerControllerTexts.CreateNewSeat, "CreateEventSeat", new { id = Model.First().EventAreaId })
</p>
<p>@ViewBag.ErrorMessage</p>

<table class="table">
    <tr>
        <th>
            @WebUI.Resources.EventManagerControllerTexts.Row
        </th>
        <th>
            @WebUI.Resources.EventManagerControllerTexts.Number
        </th>
        <th>
            @WebUI.Resources.EventManagerControllerTexts.State
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Row)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink(WebUI.Resources.EventManagerControllerTexts.Delete, "DeleteEventSeat", new { id = item.Id })            
        </td>
    </tr>
}

</table>