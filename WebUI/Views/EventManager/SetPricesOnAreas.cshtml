@model WebUI.Models.ForEventManagerViewModel

@{
    ViewBag.Title = "SetPricesOnAreas";
}

<h2>@WebUI.Resources.EventManagerControllerTexts.SetPrices</h2>
<h2>@ViewBag.Error</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.DateTimeStart)
    @Html.HiddenFor(model => model.DateTimeFinish)
    @Html.HiddenFor(model => model.ImageUrl)
    @Html.HiddenFor(model => model.LayoutName)

    for (int i = 0; i < Model.EventAreaDTOs.Count; i++)
    {
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.EventAreaDTOs[i].Id)
            @Html.HiddenFor(model => model.EventAreaDTOs[i].EventId)
            @Html.HiddenFor(model => model.EventAreaDTOs[i].LayoutId)
            @Html.HiddenFor(model => model.EventAreaDTOs[i].Description)
            @Html.HiddenFor(model => model.EventAreaDTOs[i].CoordX)
            @Html.HiddenFor(model => model.EventAreaDTOs[i].CoordY)

            <div class="form-group">
                @Html.Label(Model.EventAreaDTOs[i].Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EventAreaDTOs[i].Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EventAreaDTOs[i].Price, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@WebUI.Resources.EventManagerControllerTexts.Save" class="btn btn-default" id="SaveButton" />
        </div>
    </div>
}
